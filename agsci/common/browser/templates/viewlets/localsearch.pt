
<tal:localsearch condition="view/search_enabled">    
    <form method="GET" id="localsearch-form" tal:attributes="action string:${view/portal_url}/search;">
    <label for="localsearch_SearchableText" class="hiddenStructure">Search</label>
    <input id = "localsearch_SearchableText" name="SearchableText" size="50"/>
    <input type="submit" value="Search" id="localsearch-submit" class="allowMultiSubmit" />
    <tal:search_types tal:repeat="st view/search_types">
        <input type="text" name="Type[]" tal:attributes="value st" />
    </tal:search_types>
    </form>
</tal:localsearch>


<div id="itemTemplate" style="display: none">
    <div tal:define="columns view/getTileColumns;
                     klass string:listItem listItemLeadImage list-item-columns-${columns};"
         tal:attributes="class klass">
    
        <div class="listLeadImage" tal:condition="view/show_image">
            <a href="${url}">
                <img class="leadimage" alt="" src="${leadImageUrl}">
            </a>
        </div>

        <div class="listTitle">
        
            <a class="summary url" href="${url}">${title}</a>
        
        </div>

        <div class="listDate" tal:condition="view/show_date">${date}</div>

        <p class="listDescription" tal:condition="view/show_description">
            <span class="description">${description}</span>
        </p>
    
        <div class="visualClear"><!-- --></div>
    
    </div>
</div>


<script type="text/javascript">


    $(document).ready(function() {
            
            $('#localsearch-form').submit(function() {

                var ed_class = "elasticsearch-down";
                
                var searchableText = $("#localsearch_SearchableText").val();
                
                if (searchableText) {
                    if ($(this).hasClass(ed_class)) {
                        // Submitting through Plone Form
                        return true;
                    }

                    var json_query = {
                        index: 'atlas',
                        body: $(this).ploneCatalogQueryToJSON()
                    }
                    
                    return false;
                    
                    console.log(json_query);

                    // From https://github.com/elastic/elasticsearch-js

                    var client = new $.es.Client({
                        host: 'http://agplonesrv.ag.psu.edu/elastic',
                        log: 'trace'
                    });

                    client.ping({
                        requestTimeout: 1000,
                        // undocumented params are appended to the query string
                        hello: "elasticsearch!"
                    }, function (error) {
                        if (error) {
                            console.error('elasticsearch cluster is down!');
                            $('#localsearch-form').addClass(ed_class);
                            $('#localsearch-form').submit();
                            return false;
                        } else {
                            console.log('All is well');
                            client.search(json_query).then(function (body) {
                                var hits = body.hits.hits;
        
                                var results = [];
                                
                                for (i in hits) {
                                    results.push(hits[i]._source)
                                }
        
                                // Clear results area
                                $("#content-core").empty();
                                
                                if (results.length) {
                                    // Render the results using the template
                                    $('#itemTemplate').tmpl(results).appendTo("#content-core");
                                }
                                else {
                                    $("#content-core").append("<p>No results found.</p>");
                                }
                            
                            }, function (error) {
                                console.trace(error.message);
                            });
                        }
                    });


                }

                // Don't actually submit form
                return false;
                
            });
    
        }
    );

</script>